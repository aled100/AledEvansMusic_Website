---
import site from '../content/site.json';
---
<section class="relative -mt-20 md:-mt-24">
  <picture>
    <!-- Mobile portrait hero -->
    <source srcset={site.hero.mobileImage} media="(max-width: 768px)" />
    <!-- Default desktop hero -->
    <img 
      src={site.hero.image} 
      alt="Aled Evans performing" 
      class="absolute inset-0 h-full w-full object-cover opacity-60" 
    />
  </picture>

  <div class="relative container pt-12 pb-28 md:pt-36 md:pb-40 text-center">
    <!-- Larger, responsive logo -->
    <img 
      src={site.hero.logo} 
      alt="Logo" 
      class="mx-auto mb-6 h-28 w-28 md:h-72 md:w-72 rounded-full ring-2 ring-white/20 shadow-lg" 
    />
    
    <h1 class="h1 font-serif max-w-3xl mx-auto">{site.hero.headline}</h1>
    <p class="lead mt-3 max-w-2xl mx-auto">{site.hero.subhead}</p>
    <div class="mt-6">
      <a href="/contact" class="btn">{site.primaryCTA}</a>
    </div>
  </div>
</section>

