---
import '../styles/global.css';   // ✅ Import CSS properly so Astro/Vite bundles it
const { 
  title = 'Aled Evans — Acoustic Singer', 
  description = 'Elegant live acoustic + DJ for modern UK weddings', 
  metaImage = '/images/1.jpeg' 
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

    <script defer data-domain="example.com" src="https://plausible.io/js/script.js"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17525864225"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-17525864225');
    </script>
  </head>
  <body class="font-sans">
    <!-- Add responsive top padding to clear the sticky header -->
    <main class="pt-20 md:pt-24">
      <slot />
    </main>
  </body>
</html>
