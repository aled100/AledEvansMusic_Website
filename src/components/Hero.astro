---
import site from '../content/site.json';
---
<section class="relative overflow-hidden">
  <!-- Background video -->
  <video
    src="/videos/hero.mp4"
    autoplay
    muted
    loop
    playsinline
    poster="/images/hero-poster.jpg"
    class="absolute inset-0 w-full h-full object-cover"
  >
    Sorry, your browser doesn't support embedded videos.
  </video>

  <!-- Dark overlay to keep text readable -->
  <div class="absolute inset-0 bg-black/40"></div>

  <!-- Hero content -->
  <div class="relative container pt-12 pb-28 md:pt-36 md:pb-40 text-center text-white">
    <img 
      src={site.hero.logo} 
      alt="Logo" 
      class="mx-auto mb-6 h-28 w-28 md:h-72 md:w-72 rounded-full ring-2 ring-white/20 shadow-lg" 
    />

    <div class="mx-auto max-w-2xl inline-block rounded-2xl 
                bg-white/55 md:bg-white/40 backdrop-blur-[2px]
                ring-1 ring-white/50 shadow-[0_6px_24px_rgba(0,0,0,0.06)]
                px-4 py-3 md:px-6 md:py-4 text-center">
      <h1 class="h1 font-serif tracking-tight text-black">{site.hero.headline}</h1>
      <p class="mt-2 leading-relaxed text-neutral-800">{site.hero.subhead}</p>
    </div>

    <div class="mt-6">
<a
  href="/contact"
  class="btn"
  onclick="window.gtag?.('event', 'check_my_date_click', {
    event_category: 'engagement',
    event_label: 'Hero CTA'
  })"
>
  {site.primaryCTA}
</a>    </div>
  </div>
</section>