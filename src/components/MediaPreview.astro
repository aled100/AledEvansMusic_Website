---
import site from '../content/site.json';
---
<section class="section">
  <div class="container">
    <h2 class="h2 font-serif mb-6">Media</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
      {site.media.gallery.slice(0,6).map(g => (
        <img 
          src={g} 
          alt="Gallery" 
          class="w-full aspect-[3/2] object-cover object-center rounded-md ring-1 ring-coal/10" 
        />
      ))}
    </div>
    <a href="/media" class="btn-outline mt-6 inline-block">View Media</a>
  </div>
</section>

