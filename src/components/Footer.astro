---
import site from '../content/site.json';
---
<footer class="section bg-stone/40 mt-16">
  <div class="container grid md:grid-cols-3 gap-8">
    <!-- Brand / Location -->
    <div>
      <div class="font-serif text-xl">{site.brandName}</div>
      <div class="small">{site.tagline}</div>
      <div class="small mt-2">Based in South Wales · Available UK-wide</div>
    </div>

    <!-- Contact -->
    <div>
      <div class="font-serif">Contact</div>
      <div class="small">
        <a href={"mailto:" + site.contact.email} class="hover:text-[color:var(--color-gold,#C6A867)] transition-colors">
          {site.contact.email}
        </a>
      </div>

      <!-- ✅ Click-to-call link (no emoji, consistent text color) -->
      <div class="small mt-1">
        <a href="tel:+447491760202" class="hover:text-[color:var(--color-gold,#C6A867)] transition-colors">
          07491&nbsp;760&nbsp;202
        </a>
      </div>

      <div class="small mt-2">
        Areas: {site.contact.areasServed.join(', ')}
      </div>
    </div>

    <!-- Socials -->
    <div>
      <div class="font-serif">Socials</div>
      <ul class="small space-y-1">
        {site.socials.map((s) => (
          <li>
            <a href={s.url} class="hover:text-[color:var(--color-gold,#C6A867)] transition-colors">
              {s.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <div class="container small mt-8 border-t border-coal/10 pt-4">
    © {new Date().getFullYear()} {site.brandName}. All rights reserved.
  </div>

  <!-- ✅ Structured data for Google (MusicGroup / LocalBusiness hybrid) -->
  <script type="application/ld+json" is:inline>
    {{
      "@context": "https://schema.org",
      "@type": "MusicGroup",
      "name": site.brandName,
      "url": "https://aledevansmusic.com",
      "telephone": "+447491760202",
      "areaServed": site.contact.areasServed,
      "sameAs": site.socials.map((s) => s.url)
    }}
  </script>
</footer>