---
import site from '../content/site.json';

const ideas = Array.isArray(site?.songlist?.firstDanceIdeas)
  ? site.songlist.firstDanceIdeas
  : [];
---

<section class="section bg-stone/40">
  <div class="container">
    <h2 class="h2 font-serif mb-4">Songlist â€” First Dance Ideas</h2>

    {ideas.length > 0 ? (
      <ul class="grid md:grid-cols-2 gap-x-8 gap-y-2 small list-disc pl-5">
        {ideas.map((item) => <li>{item}</li>)}
      </ul>
    ) : (
      <p class="small opacity-70">First dance ideas coming soon.</p>
    )}

    <a href="/songlist" class="btn-outline mt-6 inline-block">View Full Songlist</a>
  </div>
</section>
